page {
  background-color: #dedede
}
.container {
  width: 100%;
  height: 100%;
  background-color: #ffffff
}

.swiper {
  width: 100%;
  height: 355rpx
}
 .swiperImage {
  width: 100%;
  height: 100%
} 


.header {
  /*左边框  */
  border-left-width: 2px;
  /*实线  */
  border-left-style: solid;
  border-left-color: greenyellow;
  /*布局方式  */
  display: flex;

  /*两侧对齐  */
  justify-content: space-between;
  height: 20px;

  /*居中对齐  */
   align-items: center; 
   padding-left: 10px;
   padding-right: 10px;

   margin-top: 15px;
   margin-bottom: 15px;
}
.seeAll {
  font-size: 12px;
  color: green;
}


.content {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
  justify-content: center;
}
.contentItem {
  width: 47%;
  height: 200px;
  background-color: lightgray;
  margin: 3px;
  position: relative;
}
.contentItemImage {
  width: 100%;
  height: 100%;
}
.contentItemCover {
  /*绝对布局  首先把父级空间固定  */
  position: absolute;
  bottom: 0px;
  color: white;
  font-size: 14px;
  background: -webkit-linear-gradient(bottom, rgba(0, 0, 0, 1),rgba(0, 0, 0, 0));
  width: 98%;
  height: 30px;

  /*flex布局 向下走  */
  display: flex;
  flex-direction: column;
  justify-content: flex-end;

  /*底部和左侧的间距  */
  padding-left: 1%;
  padding-right: 1%;
  padding-bottom: 2px;
}




.listItem {
  height: 320px;
  width: 100%;
  background-color: #f5f5f5;
}
.listItemImage {
  width: 100%;
  height: 70%;
  background-color: green;
  position: relative;
}
.listItemImageBG {
  width: 100%;
  height: 100%;
}
.listItemImageIcon {
  width: 40px;
  height: 40px;
  border-radius: 50%;
  position: absolute;
  bottom: -20px;
  right: 20px;
}
.listItemText {
  width: 100%;
  height: 30%;
  background-color: white;
}
.listItemTitle {
  font-size: 17px;
  color: #000000;
  margin-top: 10px;
  margin-left: 8px;
  margin-right: 8px;
  background-color: green;
}
.listItemContent {
  font-size: 14px;
  color: #999999;
  margin-left: 8px;
  margin-right: 8px;
  margin-top: 10px;
  background-color: red;
}



